{% extends "base.html.jinja" %}
{% block title %}Items{% endblock %}

{% block header %}
    <h1>Items</h1>
{% endblock %}

{% block content %}
    {% if items %}
        <table>
        {% for item in items %}
            <tr>
                <td><a href="{{url_for('edit_item', folder_key=folder_key, file_name=file_name, key_str=item.key)}}">{{item.key}}</a></td>
                <td>{{item.original}}</td>
                <td>{%if item.translated %}{{item.translated}}{%endif%}</td>
            </tr>

        {% endfor %}
        </table>
    {% endif %}
{% endblock %}